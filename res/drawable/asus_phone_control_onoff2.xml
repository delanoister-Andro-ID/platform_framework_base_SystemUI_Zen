<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="false">
        <bitmap android:gravity="center" android:src="@drawable/asus_ep_btn_bg_on" />
    </item>
    <item android:state_checked="false" android:state_pressed="false">
        <bitmap android:gravity="center" android:src="@drawable/asus_ep_btn_bg_off" />
    </item>
    <item android:state_pressed="true">
        <bitmap android:gravity="center" android:src="@drawable/asus_ep_btn_bg_hl" />
    </item>
</selector>